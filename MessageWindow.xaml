<Window x:Class="SharpTests.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpTests"
        mc:Ignorable="d"
        WindowStyle="None"
        ResizeMode="NoResize"
        BorderThickness="1"
        WindowStartupLocation="CenterScreen"
        Title="MessageWindow" Height="140" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="0.5*"/>
        </Grid.RowDefinitions>
        
        <TextBlock x:Name="textBlock" Grid.Row="0" VerticalAlignment="Center" TextAlignment="Center" 
                   HorizontalAlignment="Center" FontSize="16" TextWrapping="Wrap"/>

        <Button Grid.Row="1" Width="100" Margin="0 0 0 10" Content="OK" Click="Button_Click"/>

    </Grid>
</Window>
